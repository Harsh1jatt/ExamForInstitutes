<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Institute Exam Management Dashboard</title>
  <link rel="stylesheet" href="/css/adminDashboard.css">
  <link rel="stylesheet" href="/css/header.css">

</head>

<body>
  <header>
    <div class="header-left">
      <div class="logo">
        <img height="60" src="https://cdn.pixabay.com/photo/2016/12/27/13/10/logo-1933884_640.png" alt="logo">
      </div>
      <div class="Titles">
        <h2>Raretech Exam</h2>
        <p>Raretech Basic Exam -2024</p>
      </div>
    </div>
    <div class="header-right">
      <div class="details">
        <span>Admin Name</span>
      </div>
      <a href="/logout"><button class="btn-danger">Logout</button></a>
    </div>
  </header>

  <main class="dashboard">
    <section class="content">
      <div class="overview">
        <h2>Dashboard Overview</h2>
        <div class="cards">
          <div class="card">
            <h3>Total Students</h3>
            <p>150</p>
          </div>
          <div class="card">
            <h3>Total Exams</h3>
            <p>5</p>
          </div>
        </div>
      </div>

      <div class="exam-management">
        <h2>Manage Exams</h2>
        <table>
          <thead>
            <tr>
              <th>Exam Name</th>
              <th>Type</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Mid-Term Exam</td>
              <td>Written</td>
              <td>Scheduled</td>
              <td>
                <button>Edit</button>
                <button>View</button>
              </td>
            </tr>
            <!-- More exam rows here -->
          </tbody>
        </table>
        <button class="add-exam">Add New Exam</button>
      </div>

      <div class="student-management">
        <h2>Manage Students</h2>
        <table>
          <thead>
            <tr>
              <th>Student Name</th>
              <th>Roll Number</th>
              <th>Enrolled Exams</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>John Doe</td>
              <td>1001</td>
              <td>Mid-Term Exam, Final Exam</td>
              <td>
                <button>Edit</button>
                <button>View</button>
              </td>
            </tr>
            <!-- More student rows here -->
          </tbody>
        </table>
        <button class="add-student">Add New Student</button>
      </div>
    </section>
  </main>

  <footer>
    <p>&copy; 2024 Institute Name Exam Management</p>
  </footer>

  <!-- Settings Modal -->
  <div id="settingsModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <h2>Settings</h2>
      <form>
        <label for="adminName">Admin Name:</label>
        <input type="text" id="adminName" value="Admin Name">
        <br>
        <label for="email">Email:</label>
        <input type="email" id="email" value="admin@example.com">
        <br>
        <label for="password">Password:</label>
        <input type="password" id="password">
        <br>
        <button type="submit">Save Changes</button>
      </form>
    </div>
  </div>
  <script src="/js/admin.js"></script>
</body>

</html>